# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.c text
*.h text
*.go text
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text
*.md text
*.txt text
*.yml text
*.yaml text
*.xml text
*.html text
*.htm text
*.css text
*.scss text
*.sass text
*.less text
*.sql text
*.sh text eol=lf
*.bash text eol=lf

# Declare files that will always have CRLF line endings on checkout.
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout.
*.gitignore text eol=lf
*.gitattributes text eol=lf
Makefile text eol=lf
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.jar binary
*.class binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Go specific
*.mod text eol=lf
*.sum text eol=lf

# Node.js specific
package.json text eol=lf
package-lock.json text eol=lf
*.npmrc text eol=lf

# Docker specific
docker-compose*.yml text eol=lf

# Kubernetes specific
*.k8s.yml text eol=lf
*.k8s.yaml text eol=lf

# Configuration files
*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf
*.env text eol=lf
*.properties text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTING* text eol=lf
LICENSE* text eol=lf
NOTICE* text eol=lf